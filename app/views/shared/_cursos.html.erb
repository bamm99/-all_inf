<!-- app/views/shared/_cursos.html.erb -->
<div class="p-4 text-black">
    <h3 class="text-3xl mb-4 text-black float-left">Gestión de Cursos</h3>
    <button onclick="cargarVista('nuevo_curso');" class="py-2.5 px-4 text-white bg-blue-500 rounded-full hover:bg-blue-700 shadow-md">
      Agregar Curso
    </button>
    
    <div class="clear-both mt-6">
        <h4 class="text-lg mb-2">Cursos Disponibles</h4>
        <table class="min-w-full leading-normal">
            <thead>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                        Nombre del curso
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                        Descripción
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody class="text-black">
                <% @cursos.each do |curso| %>
                    <tr>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                            <%= curso.title %>
                        </td>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                            <%= curso.description %>
                        </td>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-black">
                            <a href="javascript:void(0)" onclick="cargarVista('menu_curso', <%= curso.id %>);" class="info-btn block py-2.5 px-4 text-black rounded hover:bg-purple-200">+ info</a>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>