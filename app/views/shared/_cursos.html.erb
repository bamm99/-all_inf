<div class="p-4 text-black">
    <h3 class="text-3xl mb-4 text-black">Gestión de Cursos</h3>
    
    <!-- Formulario para subir un nuevo curso -->
    <%= form_for @nuevo_curso, url: admin_create_course_path, html: { multipart: true } do |f| %>
        <div class="mb-4">
            <%= f.label :title, "Nombre del curso", class: "text-black block text-sm font-bold mb-1"%>
            <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
        </div>

        <div class="mb-4">
        <%= f.label :description, "Descripción", class: "text-black block text-sm font-bold mb-1"%>
        <%= f.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
        </div>

        <%= f.label :file, "Archivo del curso (README)", class: "text-black block text-sm font-bold mb-1" %>
        <div class="mb-4 flex justify-between items-center">

            <div class="flex-grow">
                <%= f.file_field :file, direct_upload: true, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>
            <div>
                <%= f.submit "Subir Curso", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
            </div>
            
        </div>

    <% end %>

    <!-- Listado de cursos existentes -->
<div class="mt-6">
    <h4 class="text-lg mb-2">Cursos Disponibles</h4>
    <table class="min-w-full leading-normal">
        <thead>
            <tr>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Nombre del curso
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Descripción
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody class="text-black">
            <% @cursos.each do |curso| %>
                <tr>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <%= curso.title %>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <%= curso.description %>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm flex items-center">
                        <%= link_to rails_blob_path(curso.file, disposition: "attachment"), class: "text-blue-500 hover:text-blue-800 mr-2" do %>
                          <%= image_tag("https://cdn-icons-png.flaticon.com/512/4239/4239049.png", alt: "Descargar", width: "20") %>
                        <% end %>
                        <%= link_to edit_admin_course_path(curso.id), class: "text-blue-500 hover:text-blue-800 mr-2" do %>
                          <%= image_tag("https://cdn-icons-png.flaticon.com/512/1159/1159876.png", alt: "Editar", width: "20") %>
                        <% end %>
                        <%= link_to admin_course_path(curso.id), method: :delete, data: { confirm: "¿Estás seguro de eliminar este curso?" }, class: "text-red-500 hover:text-red-800" do %>
                          <%= image_tag("https://cdn-icons-png.flaticon.com/512/1214/1214594.png", alt: "Eliminar", width: "20") %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

</div>