<!-- app/views/shared/_menucursos.html.erb -->
<div class="p-4 text-black">
    <h3 class="text-3xl mb-4 text-black"><%= @curso.title %></h3>
    <p><%= @curso.description %></p>

    <!-- Botones de acción -->
    <%= link_to 'Editar', edit_admin_course_path(@curso), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Eliminar', admin_delete_course_path(@curso), method: :delete, data: { confirm: "¿Estás seguro de eliminar este curso?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Volver', '#', class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded", id: 'volver-a-cursos' %>
</div>
